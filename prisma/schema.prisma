generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id              Int               @id @default(autoincrement())
  title           String
  description     String
  release_date    DateTime
  poster_path     String
  UserComment     UserComment[]
  UserMovieFollow UserMovieFollow[]
  UserRating      UserRating[]
}

model Role {
  name     String     @id
  UserRole UserRole[]
}

model UserComment {
  id       Int      @id @default(autoincrement())
  comment  String
  userId   String
  movie    Movie    @relation(fields: [movieId], references: [id])
  movieId  Int
  postedAt DateTime
}

model UserRating {
  rating  Int
  userId  String
  movie   Movie  @relation(fields: [movieId], references: [id])
  movieId Int

  @@id([userId, movieId])
}

model UserMovieFollow {
  userId      String
  movie       Movie  @relation(fields: [movieId], references: [id])
  movieId     Int
  unseenCount Int

  @@id([userId, movieId])
}

model UserRole {
  userId String
  roleId String
  Role   Role   @relation(fields: [roleId], references: [name])

  @@id([userId, roleId])
}
